@model AppEjemploLayout.Models.ClasesProyecto.Proyecto

@{
    ViewBag.Title = "CrearProyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contenido">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <br /><br />
        <div class="form-horizontal">
            <div class="container">
                <div class="row">
                    <div class="col-lg-offset-4"><h2>Nuevo proyecto</h2></div>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="col-md-3">Nombre del proyecto:</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.nombreProyecto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nombreProyecto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3">Descripción:</label>
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.descripcionProyecto, 4, 61, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.descripcionProyecto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3">Fecha inicio:</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.fechaInicioProyecto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fechaInicioProyecto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3">Fecha fin:</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.fechaFinalizacionProyecto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fechaFinalizacionProyecto, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <a href="Index" type="button" class="btn btn-danger btn-lg"><span class="glyphicon glyphicon-remove-circle"></span> Cancelar</a>
                        <button type="submit" value="CrearProyecto" class="col-md-offset-1 btn btn-success btn-lg"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
