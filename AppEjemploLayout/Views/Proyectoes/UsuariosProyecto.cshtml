@model IEnumerable<AppEjemploLayout.Models.Proyecto_Usuario.ProyectoUsuarioRelacion>

@{
    ViewBag.Title = "UsuariosProyecto";
}

<div class="contenido">
    <div class="text-center">
        @* <h2>Proyecto @Html.DisplayFor(modelItem => Model.proyecto.nombreProyecto)</h2> *@
    </div>    

    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>



    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.usuario.correoElectronicoUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rolUsuario)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.usuario.correoElectronicoUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rolUsuario)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "EliminarIntegrante", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>


<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Agregar Integrante al Equipo</h4>
            </div>
            <div class="modal-body">
                <div class="coso" style="padding: 20px;">
                    <form class="form-horizontal">
                        <input id="txt-idProyecto" value="@Model.First().ProyectoId" hidden/>
                        <div class="form-group">
                            <label for="nombre">Nombre:</label>
                            <input class="form-control" id="nombreUsuario" placeholder="Ingrese Nombre">
                        </div>
                        <div class="form-group">
                            <label for="rol">Rol:</label>
                            <select id="cmb-rol" class="form-control">
                                <option value="Equipo de trabajo">Equipo de trabajo</option>
                                <option value="Product Owner">Product Owner</option>
                                <option value="Scrum Master">Scrum Master</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button id="btn-insertarUsuario" type="submit" class="btn btn-success" >Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>





@Scripts.Render("~/scripts/autocompletado")
@Scripts.Render("~/scripts/eventosProyecto")