@model AppEjemploLayout.Models.ViewModel.InformacionDeProyecto

@{
    ViewBag.Title = "UsuariosProyecto";
}

<div class="container-fluid text-center">
    <div class="row content">


        <div class="col-sm-6 sidenav">

            <div class="contenido col-md-offset-0">
                <div class="text-center">
                    @* <h2>Proyecto @Html.DisplayFor(modelItem => Model.proyecto.nombreProyecto)</h2> *@
                </div>

                <!-- Trigger the modal with a button -->
                <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>



                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.equipo.First().usuario.correoElectronicoUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.equipo.First().rolUsuario)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.equipo)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.usuario.correoElectronicoUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rolUsuario)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Eliminar", "EliminarIntegrante", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>

        <div class="col-sm-6 text-left">

            <div class="contenido col-md-offset-0">
                <div class="text-center">
                    @* <h2>Proyecto @Html.DisplayFor(modelItem => Model.proyecto.nombreProyecto)</h2> *@
                </div>

                <!-- Trigger the modal with a button -->
                <a class="btn btn-success btn-lg" href="../HistoriaUsuarios/Create?IdProyecto=@Model.proyecto.ProyectoId">Nueva HU</a>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.productBacklog.First().nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.productBacklog.First().prioridad)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.productBacklog)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.prioridad)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit","HistoriaUsuarios", new { id = item.HistoriaUsuarioId },"") |
                                @Html.ActionLink("Detalles", "Details", "HistoriaUsuarios", new { id = item.HistoriaUsuarioId },"") |
                                @Html.ActionLink("Eliminar", "EliminarIntegrante", "HistoriaUsuarios", new { id = item.HistoriaUsuarioId },"")
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>


        <div class="col-sm-12 text-left">

            <div class="contenido col-md-offset-0">
                <div class="text-center">
                    @* <h2>Proyecto @Html.DisplayFor(modelItem => Model.proyecto.nombreProyecto)</h2> *@
                </div>

                <!-- Trigger the modal with a button -->
                <a class="btn btn-success btn-lg" href="../Sprints/Create?IdProyecto=@Model.proyecto.ProyectoId">Nuevo sprint</a>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.sprints.First().SprintId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sprints.First().estado)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.sprints)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SprintId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.estado)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", "Sprints", new { id = item.SprintId },"") |
                                @Html.ActionLink("Detalles", "Details", "Sprints", new { id = item.SprintId },"") |
                                @Html.ActionLink("Eliminar", "Delete" , "Sprints", new { id = item.SprintId },"")
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Agregar Integrante al Equipo</h4>
                        </div>
                        <div class="modal-body">
                            <div class="coso" style="padding: 20px;">
                                <form class="form-horizontal" onsubmit="false">
                                    <input id="txt-idProyecto" value="@Model.proyecto.ProyectoId" hidden />
                                    <div class="form-group">
                                        <label for="nombre">Nombre:</label>
                                        <input class="form-control" id="nombreUsuario" placeholder="Ingrese Nombre">
                                    </div>
                                    <div class="form-group">
                                        <label for="rol">Rol:</label>
                                        <select id="cmb-rol" class="form-control">
                                            <option value="Equipo de trabajo">Equipo de trabajo</option>
                                            <option value="Product Owner">Product Owner</option>
                                            <option value="Scrum Master">Scrum Master</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <button id="btn-insertarUsuario" class="btn btn-success">Agregar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>

                </div>
            </div>
        

    </div>
</div>
@Scripts.Render("~/scripts/autocompletado")
@Scripts.Render("~/scripts/eventosProyecto")
