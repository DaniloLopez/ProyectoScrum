@{
    ViewBag.Title = "Contact";
}
<br /><br />

<div class="contenido">
    <h2>Contactanos</h2>
    <div class="container">
        <hr />
        <div class="col-md-9">
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input class="form-control" id="nombre" placeholder="Ingrese Nombre">
                </div>
                <div class="form-group">
                    <label for="correo">Correo:</label>
                    <input class="form-control" id="correo" placeholder="Ingrese Correo">
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        <label for="mensaje">Mensaje:</label>
                        <textarea class="form-control" rows="5" id="mensaje"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <button id="btn" class="btn btn-success">Enviar</button>
                </div>
             </div>
        </div>
    </div>
</div>
