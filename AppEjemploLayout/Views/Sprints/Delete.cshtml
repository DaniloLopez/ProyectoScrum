@model AppEjemploLayout.Models.ClasesSprints.Sprint

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contenido">

    <h2 class="text-center">Eliminar Sprint</h2>

    <h3 class="text-center">¿Está seguro que quiere eliminar esto?</h3>

    <div class="container">

        <div class="container well">

            <dl class="dl-horizontal">
                <dd>
                    @Html.DisplayFor(model => model.proyecto.nombreProyecto)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.duracion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.duracion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.estado)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.estado)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">                    
                    <input type="submit" value="Eliminar" class="btn btn-success" />
                </div>

                
            }
        </div>

        <div>
            <a href="/Proyectoes/UsuariosProyecto?IdProyecto=@ViewBag.proyectoId">Volver</a>
        </div>
    </div>
</div>