@model AppEjemploLayout.Models.ClasesSprints.Sprint

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contenido">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <br /><br />
        <div class="form-horizontal">
            <h2 class="text-center">Crear sprint</h2>
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="container col-md-offset-1">
                <div class="form-group">
                    <label class="col-form-label col-md-2">Duración:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.duracion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.duracion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-form-label col-md-2">Estado:</label>
                    <div class="col-md-10">
                        @{
                            List<SelectListItem> lista = new List<SelectListItem>();
                            lista.Add(new SelectListItem { Text = "Abierto", Value = "abierto" });
                            lista.Add(new SelectListItem { Text = "Cerrado", Value = "cerrado" });
                        }
                        @Html.DropDownListFor(model => model.estado, lista, new { htmlAttributes = new { @class = "inputs-editar" } })
                        @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" hidden>
                    @Html.LabelFor(model => model.ProyectoId, "ProyectoId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ProyectoId, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.ProyectoId } })
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="@Url.Action("UsuariosProyecto", "Proyectoes")" class="col-md-2 btn btn-danger"><span class="glyphicon glyphicon-remove-circle"></span> Cancelar</a>
                        <button type="submit" value="Guardar" class="col-md-offset-1 col-md-2 btn btn-success"><span class="glyphicon glyphicon-floppy-disk"></span> Guardar</button>
                    </div>
                </div>
            </div>
       </div>
           
    }
</div>
